name: Tests

on:
  push:
    branches: [ main, master, develop ]
  pull_request:
    branches: [ main, master, develop ]

jobs:
  test:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: ["3.11", "3.12"]

    steps:
    - uses: actions/checkout@v4
    
    - name: Install uv
      uses: astral-sh/setup-uv@v3
      with:
        version: "latest"
    
    - name: Set up Python ${{ matrix.python-version }}
      run: uv python install ${{ matrix.python-version }}
    
    - name: Install dependencies
      run: |
        uv sync --group dev
    
    - name: Lint with black and flake8
      run: |
        uv run black --check src/ tests/
        uv run flake8 src/ tests/ --max-line-length=88 --extend-ignore=E203,W503
      continue-on-error: true
    
    - name: Run tests with pytest
      run: |
        uv run pytest tests/ --ignore=tests/test_analytics.py --ignore=tests/test_calendar_sync.py -v --cov=src/todo_cli --cov-report=xml --cov-report=term-missing
    
    - name: Upload coverage to Codecov
      uses: codecov/codecov-action@v3
      with:
        file: ./coverage.xml
        fail_ci_if_error: false